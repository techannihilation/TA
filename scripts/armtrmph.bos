Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode barrel1a type NOHEATCLOUD | BITMAP1;
		explode barrel2b type NOHEATCLOUD | BITMAP2;
		explode barrel4a type NOHEATCLOUD | BITMAP3;
		explode barrel3a type NOHEATCLOUD | BITMAP4;
		explode barrel1b type NOHEATCLOUD | BITMAP5;
		explode turret1 type NOHEATCLOUD | BITMAP3;
		explode turret2 type NOHEATCLOUD | BITMAP4;
		explode base type NOHEATCLOUD | BITMAP1;
		explode turret3 type NOHEATCLOUD | BITMAP4;
		explode wake1 type NOHEATCLOUD | BITMAP1;
		explode wake2 type NOHEATCLOUD | BITMAP2;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode barrel1a type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP1;
		explode barrel3b type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP2;
		explode barrel4c type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP3;
		explode barrel4b type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP4;
		explode barrel1b type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP5;
		explode barrel2b type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP1;
		explode turret1 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP2;
		explode turret2 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP3;
		explode turret3 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP4;
		explode turret4 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP5;
		explode base type NOHEATCLOUD | BITMAP1;
		explode wake1 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP1;
		explode wake2 type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP2;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode barrel1a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
		explode barrel4a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		explode barrel3b type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
		explode barrel4c type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
		explode barrel2a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5;
		explode turret1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
		explode turret2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		explode turret3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
		explode turret4 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
		explode base type NOHEATCLOUD | BITMAP1;
		explode wake1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
		explode wake2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		return (corpsetype);
	}
	corpsetype = 3;
	explode barrel1a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode barrel2b type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
	explode barrel3a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
	explode barrel4c type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
	explode barrel4b type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5;
	explode barrel2a type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode barrel3b type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
	explode turret2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
	explode turret1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
	explode turret3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5;
	explode base type NOHEATCLOUD | BITMAP1;
	explode body type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP5;
	explode wake1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode wake2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
	return (corpsetype);
}

MotionControl(moving, aiming, justmoved)
{
	justmoved = TRUE;
	while( TRUE )
	{
		moving = bMoving;
		aiming = bAiming;
		if( moving )
		{
			if( aiming )
			{
				Static_Var_3 = 1;
				call-script walklegs();
			}
			if( !aiming )
			{
				Static_Var_3 = 0;
				call-script walk();
			}
			justmoved = TRUE;
			sleep 70;
		}
		if( !moving )
		{
			Static_Var_3 = 1;
			if( justmoved )
			{
				move pelvis to y-axis [0.000000] speed [1.000000];
				turn rthigh to x-axis <0.000000> speed <200.000000>;
				turn rleg to x-axis <0.000000> speed <200.000000>;
				turn rfoot to x-axis <0.000000> speed <200.000000>;
				turn lthigh to x-axis <0.000000> speed <200.000000>;
				turn lleg to x-axis <0.000000> speed <200.000000>;
				turn lfoot to x-axis <0.000000> speed <200.000000>;
				if( !aiming )
				{
					turn body to y-axis <0.000000> speed <90.000000>;
					turn rarm to x-axis <0.000000> speed <200.000000>;
					turn larm to x-axis <0.000000> speed <200.000000>;
				}
				justmoved = FALSE;
			}
			sleep 100;
		}
	}
}

Create()
{
	hide rflare;
	hide lflare;
	hide flare3;
	bMoving = FALSE;
	bAiming = FALSE;
	Static_Var_3 = 1;
	gun_1 = base;
	gun_3 = 1;
	isgunone = 0;
	restore_delay = 3000;
	start-script MotionControl();
	start-script SmokeUnit();
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 2;
}

StartMoving()
{
	bMoving = TRUE;
}

StopMoving()
{
	bMoving = FALSE;
}

SweetSpot(piecenum)
{
	piecenum = body;
}

RestoreAfterDelay()
{
	sleep restore_delay;
	isgunone = 0;
	turn body to y-axis <0.000000> speed <90.000000>;
	turn rarm to x-axis <0.000000> speed <45.000000>;
	turn larm to x-axis <0.000000> speed <45.000000>;
	turn rlowarm to x-axis <0.000000> speed <45.000000>;
	turn llowarm to x-axis <0.000000> speed <45.000000>;
	wait-for-turn body around y-axis;
	wait-for-turn rarm around x-axis;
	wait-for-turn larm around x-axis;
	bAiming = FALSE;
}

RestoreAfterDelay2()
{
	sleep restore_delay;
	turn head to y-axis <0.000000> speed <50.000000>;
	wait-for-turn head around y-axis;
}

AimFromPrimary(piecenum)
{
	piecenum = rarm;
	if( gun_1 == 1 )
	{
		piecenum = larm;
	}
}

QueryPrimary(piecenum)
{
	piecenum = rflare;
	if( gun_1 == 1 )
	{
		piecenum = lflare;
	}
}

FirePrimary()
{
	if( gun_1 == 0 )
	{
		emit-sfx 1024 from rflare;
		move rlowarm to y-axis [1.000000] speed [500.000000];
		sleep 100;
		move rlowarm to y-axis [0.000000] speed [5.000000];
		gun_1 = pelvis;
		return (0);
	}
	if( gun_1 == 1 )
	{
		emit-sfx 1024 from lflare;
		move llowarm to y-axis [1.000000] speed [500.000000];
		sleep 100;
		move llowarm to y-axis [0.000000] speed [5.000000];
		gun_1 = base;
	}
}

AimPrimary(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	bAiming = TRUE;
	while( !Static_Var_3 )
	{
		sleep 100;
	}
	turn body to y-axis heading speed <150.000000>;
	turn larm to x-axis <-25.000000> speed <200.000000>;
	turn rarm to x-axis <-25.000000> speed <200.000000>;
	turn llowarm to x-axis <-20.000000> - pitch speed <200.000000>;
	turn rlowarm to x-axis <-20.000000> - pitch speed <200.000000>;
	wait-for-turn body around y-axis;
	wait-for-turn larm around x-axis;
	wait-for-turn rarm around x-axis;
	isgunone = 1;
	start-script RestoreAfterDelay();
	return (1);
}

AimFromSecondary(piecenum)
{
	piecenum = head;
}

QuerySecondary(piecenum)
{
	piecenum = flare3;
}

AimSecondary(heading, pitch)
{
	signal SIG_AIM_2;
	set-signal-mask SIG_AIM_2;
	turn head to y-axis heading speed <100.000000>;
	wait-for-turn head around y-axis;
	start-script RestoreAfterDelay2();
	return (1);
}

FireSecondary()
{
	show flare3;
	sleep 100;
	hide flare3;
}

AimTertiary(heading, pitch)
{
	signal SIG_AIM_4;
	set-signal-mask SIG_AIM_4;
	bAiming = TRUE;
	start-script RestoreAfterDelay();
	return (1);
}

FireTertiary()
{
	if( gun_3 == 1 )
	{
		gun_3 = 0;
	}
	if( gun_3 == 0 )
	{
		gun_3 = 1;
	}
}

AimFromTertiary(piecenum)

lua_FlameShot(Func_Var_1)
{
}


flames1(Func_Var_1)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 500;
	}
	while( TRUE )
	{
		Func_Var_1 = 200 + Rand( 50, 800 );
		sleep Func_Var_1;
		emit-sfx 0 from tail1;
	}
}


			turn spinnerb to x-axis <0> speed <180>;
			sleep 150;
			move barrelb5 to z-axis [1.7] speed [4];			
		}
		++barrel_2;
		if(barrel_2 == 5) 
		{
			barrel_2 = 0;
		}	

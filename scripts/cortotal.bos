AimFromPrimary(piecenum)
{
	piecenum = sleeve;
	return (0);
}

QueryPrimary(piecenum)
{
	if(gun_1 == 0)
	{
		piecenum = flarea;
	}
	if(gun_1 == 1)
	{
		piecenum = flareb;
	}
	if(gun_1 == 2)
	{
		piecenum = flarec;
	}
	return (0);
}

SweetSpot(piecenum)
{
	piecenum = base;
}


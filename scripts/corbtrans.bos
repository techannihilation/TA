	move lturretex to x-axis [3.000000] speed [12.000000];
	move rturretex to x-axis [-3.000000] speed [12.000000];
}

ProcessFlames()
{
	while( TRUE )
	{
		if( Static_Var_1 == 1 )
		{
			emit-sfx 0 from FLthrust;
			emit-sfx 0 from FRthrust;
			emit-sfx 0 from BLthrust;
			emit-sfx 0 from BRthrust;
		}
		if( Static_Var_1 == 2 )
		{
			emit-sfx 0 from FLthrust;
			emit-sfx 0 from FRthrust;
			emit-sfx 0 from BLthrust;
			emit-sfx 0 from BRthrust;
		}
		sleep 40;
	}
}


	turn rshoulder to x-axis <-45.000000> - pitch speed <50.000000>;
	wait-for-turn chest around y-axis;
	wait-for-turn rarm around x-axis;	
	wait-for-turn rshoulder around x-axis;
	start-script RestoreSecondary();
	return (1);
}


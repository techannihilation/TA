StartBuilding(Func_Var_1, Func_Var_2)
{
	signal 32;
	sleep 10;
	signal SIG_AIM_1;
	signal SIG_AIM_2;
	signal SIG_AIM_3;
	bBuilding = 1;
	if( bAiming )
	{
		bAiming = 0;
	}
	while( bMoving )
	{
		sleep 100;
	}
	turn rarm to x-axis <0.000000> speed <15.000000>;
	turn rshoulder to x-axis <0.000000> speed <15.000000>;
	turn larm to x-axis <-60.000000> speed <70.000000>;
	wait-for-turn larm around x-axis;
	turn lhand to z-axis <-10.000000> speed <30.000000>;
	turn lshoulder to x-axis <0.000000> - Func_Var_2 - <0.159341> speed <40.000000>;
	turn chest to y-axis Func_Var_1 speed <90.000000>;
	wait-for-turn chest around y-axis;
	wait-for-turn lshoulder around x-axis;
	set INBUILDSTANCE to 1;
}

StopBuilding()
{
	set INBUILDSTANCE to 0;
	bBuilding = 0;
	signal SIG_AIM_1;
	signal SIG_AIM_2;
	signal SIG_AIM_3;
	turn chest to y-axis <0.000000> speed <65.000000>;²
	set-signal-mask SIG_AIM_2;
	call-script RestorePosition();
}


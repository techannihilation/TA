		wait-for-move barrel4 along z-axis;
		move barrel4 to z-axis [0.000000] speed [30.000000];
		show flare4;
		sleep 150;
		hide flare4;
	}
	++gun4;
	if( gun4 == 5 )
	{
		gun4 = body;
	}
}


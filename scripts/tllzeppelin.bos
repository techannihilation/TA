FireWeapon2()
{
	if( gun1 == 0 )
	{
		move barrel1a to z-axis [-1.600000] speed [200.000000];
		sleep 150;
		move barrel1a to z-axis [0.000000] speed [0.400000];
	}
	if( gun1 == 1 )
	{
		move barrel1b to z-axis [-1.600000] speed [200.000000];
		sleep 150;
		move barrel1b to z-axis [0.000000] speed [0.400000];
	}
	++gun1;
	if( gun1 == 2 )
	{
		gun1 = 0;
	}
}


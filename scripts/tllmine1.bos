#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, dummy_emit;


Create()
{
	dont-shade base;
	dont-cache base;
	set ARMORED to 0;
}

Activate()
{
	set ARMORED to 1;
}

Deactivate()
{
	set ARMORED to 0;
}

FireWeapon1()
{
	sleep 500;
	emit-sfx 4096 + 1 from dummy_emit;
}

QueryWeapon1(piecenum)
{
	piecenum = base;
}

AimFromWeapon1(piecenum)
{
	piecenum = base;
}


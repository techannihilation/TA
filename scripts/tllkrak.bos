Activate()
{
	start-script RequestState(0);
}

Deactivate()
{
	start-script RequestState(1);
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 2;
}

AimPrimary(heading, pitch)
{
	start-script RequestState(0);
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	while( !Static_Var_1 )
	{
		sleep 250;
	}
	turn turret to y-axis heading speed <100.000000>;
	turn sleeve to x-axis <0.000000> - pitch speed <50.000000>;
	wait-for-turn turret around y-axis;
	wait-for-turn sleeve around x-axis;
	start-script RestoreAfterDelay();
	return (1);
}

FirePrimary()
{
	if( gun_1 == 0 )
	{
		move barrel1 to z-axis [-4.000000] now;
		emit-sfx 1024 + 0 from flare1;
		move barrel1 to z-axis [0.000000] speed [3.000000];
	}
	if( gun_1 == 1 )
	{
		move barrel2 to z-axis [-4.000000] now;
		emit-sfx 1024 + 0 from flare2;
		move barrel2 to z-axis [0.000000] speed [3.000000];
	}
	++gun_1;
	if( gun_1 == 2 )
	{
		gun_1 = base;
	}
}

AimFromPrimary(piecenum)
{
	piecenum = sleeve;
}

QueryPrimary(piecenum)
{
	if( gun_1 == 0 )
	{
		piecenum = flare1;
	}
	if( gun_1 == 1 )
	{
		piecenum = flare2;
	}
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	hide flare1;
	hide flare2;
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type NOHEATCLOUD | BITMAP2;
		explode fan1 type NOHEATCLOUD | BITMAP1;
		explode fan2 type NOHEATCLOUD | BITMAP2;
		explode fan3 type NOHEATCLOUD | BITMAP1;
		explode fan4 type NOHEATCLOUD | BITMAP2;
		explode turret type NOHEATCLOUD | BITMAP1;
		explode sleeve type NOHEATCLOUD | BITMAP2;
		explode barrel1 type NOHEATCLOUD | BITMAP1;
		explode barrel2 type NOHEATCLOUD | BITMAP2;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type NOHEATCLOUD | BITMAP2;
		explode fan1 type NOHEATCLOUD | FALL | BITMAP1;
		explode fan2 type NOHEATCLOUD | FALL | BITMAP2;
		explode fan3 type NOHEATCLOUD | FALL | BITMAP1;
		explode fan4 type NOHEATCLOUD | FALL | BITMAP2;
		explode turret type NOHEATCLOUD | BITMAP3;
		explode sleeve type NOHEATCLOUD | BITMAP2;
		explode barrel1 type NOHEATCLOUD | BITMAP3;
		explode barrel2 type NOHEATCLOUD | BITMAP3;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode base type NOHEATCLOUD | BITMAP2;
		explode fan1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
		explode fan2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		explode fan3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
		explode fan4 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
		explode turret type NOHEATCLOUD | BITMAP3;
		explode sleeve type NOHEATCLOUD | SHATTER | BITMAP4;
		explode barrel1 type NOHEATCLOUD | BITMAP3;
		explode barrel2 type NOHEATCLOUD | BITMAP3;
		return (corpsetype);
	}
	corpsetype = 3;
	explode base type NOHEATCLOUD | BITMAP2;
	explode fan1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode fan2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
	explode fan3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode fan4 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
	explode turret type NOHEATCLOUD | BITMAP3;
	explode sleeve type NOHEATCLOUD | SHATTER | BITMAP4;
	explode barrel1 type NOHEATCLOUD | BITMAP3;
	explode barrel2 type NOHEATCLOUD | BITMAP3;
	return (corpsetype);
}

}

MotionControl(moving, aiming, justmoved)
{
	justmoved = TRUE;
	while( TRUE )
	{
		moving = bMoving;
		aiming = bAiming;
		if( moving )
		{
			if( aiming )
			{
				Static_Var_5 = 1;
				call-script walklegs();
			}
			if( !aiming )
			{
				Static_Var_5 = 0;
				call-script walk();
			}
			justmoved = TRUE;
		}
		if( !moving )
		{
			Static_Var_5 = 1;
			if( justmoved )
			{
				call-script stand();
				if( !aiming )
				{
					call-script RestoreArms();
				}
				justmoved = FALSE;
			}
			sleep 100;
		}
	}
}

Create()
{
	turn flame1 to x-axis <90.000000> now;
	turn flame1b to x-axis <90.000000> now;
	turn flame2 to x-axis <90.000000> now;
	hide flame1;
	hide flame1b;
	hide flame2;
	dont-cache head;
	bMoving = FALSE;
	bAiming = FALSE;
	Static_Var_3 = 0;
	Static_Var_5 = 1;
	Static_Var_4 = 0;
	gun_2 = luparm;
	restore_delay = 1500;
	set ARMORED to 1;
	start-script SmokeUnit();
	start-script MotionControl();
}

StartMoving()
{
	bMoving = TRUE;
}

StopMoving()
{
	bMoving = FALSE;
	sleep 180;
}

SweetSpot(piecenum)
{
	piecenum = torso;
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 2;
}

RestorePrimary()
{
	sleep restore_delay;
	bAiming = FALSE;
	if( !Static_Var_3 )
	{
		Static_Var_4 = 0;
	}
	call-script RestoreArms();
}

RestoreSecondary()
{
	set-signal-mask SIG_AIM_2;
	sleep 500;
	stop-spin gat around y-axis decelerate <5.000000>;
	stop-spin gat2 around y-axis decelerate <5.000000>;
	sleep restore_delay;
	turn head to y-axis <0.000000> speed <200.000000>;
	turn head to x-axis <0.000000> speed <200.000000>;
	wait-for-turn head around y-axis;
	wait-for-turn head around x-axis;
	Static_Var_3 = 0;
	if( !bAiming )
	{
		Static_Var_4 = 0;
	}
}


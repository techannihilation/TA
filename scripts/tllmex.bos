	emit-sfx 256 | 1 from steam3;
	move body to y-axis [7.000000] speed [10.000000];
	wait-for-move body along y-axis;
	emit-sfx 256 | 1 from steam1;
	emit-sfx 256 | 1 from steam2;
	emit-sfx 256 | 1 from steam3;
	move body to y-axis [5.000000] speed [10.000000];

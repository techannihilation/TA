#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, glow, tower, circles;

Create()
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 100;
	}
	while(TRUE)
	{
		spin circles around y-axis speed rand(<-25>,<25>);
		spin tower around y-axis speed <3.000000>;
		sleep rand(0,5000);
	}
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode tower type NOHEATCLOUD;
		explode circles type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode tower type NOHEATCLOUD;
		explode circles type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode tower type NOHEATCLOUD;
		explode circles type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
		return (corpsetype);
	}
	corpsetype = 3;
	explode tower type NOHEATCLOUD;
	explode circles type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT;
	return (corpsetype);
}

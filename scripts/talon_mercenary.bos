FirePrimary()
{
	emit-sfx 1025 from Flare;
	turn Lrecoil to x-axis <-15.> speed <180.>;
	turn Rrecoil to x-axis <-15.> speed <180.>;
	wait-for-turn Lrecoil around x-axis;
	turn Lrecoil to x-axis <0.> speed <20.>;
	turn Rrecoil to x-axis <0.> speed <20.>;
}

AimPrimary(heading, pitch)
{
	signal 2;
	set-signal-mask 2;
	if( Static_Var_8 == 0 )
	{
		Static_Var_2 = 1;
		if( Rand( 1, 6 ) == 1 )
		{
			turn LTarm to x-axis <45.> speed <40.>;
			turn LBarm to x-axis <-45.> speed <40.>;
			wait-for-turn LBarm around x-axis;
			turn LBarm to x-axis <0.> speed <20.>;
			turn LTarm to x-axis <0.> speed <20.>;
		}
		if( Rand( 1, 6 ) == 1 )
		{
			turn Head to y-axis <45.> speed <120.>;
			wait-for-turn Head around y-axis;
			sleep 100;
			turn Head to y-axis <-45.> speed <240.>;
			wait-for-turn Head around y-axis;
			sleep 100;
			turn Head to y-axis <0.> speed <120.>;
		}
		if( Rand( 1, 5 ) == 2 )
		{
			turn Head to x-axis <45.> speed <120.>;
			wait-for-turn Head around x-axis;
			sleep 100;
			turn Head to x-axis <0.> speed <120.>;
		}
		if( Rand( 1, 4 ) == 3 )
		{
			turn RBarm to y-axis <20.> speed <90.>;
			wait-for-turn RBarm around y-axis;
			turn RBarm to y-axis <-20.> speed <180.>;
			wait-for-turn RBarm around y-axis;
			turn RBarm to y-axis <0.> speed <90.>;
		}
	}
	Static_Var_8 = 1;
	if( Static_Var_6 >= 0 AND Static_Var_6 < 16380 )
	{
		if( heading >= 32760 AND heading < 49140 )
		{
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
		if( heading >= 49140 AND heading < 65520 )
		{
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
	}
	if( Static_Var_6 >= 16380 AND Static_Var_6 < 32760 )
	{
		if( heading >= 32760 AND heading < 49140 )
		{
			turn Torso to y-axis <90.> speed <180.>;
			wait-for-turn Torso around y-axis;
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
		if( heading >= 49140 AND heading < 65520 )
		{
			turn Torso to y-axis <90.> speed <180.>;
			wait-for-turn Torso around y-axis;
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
	}
	if( Static_Var_6 >= 32760 AND Static_Var_6 < 49140 )
	{
		if( heading >= 0 AND heading < 16380 )
		{
			turn Torso to y-axis <270.> speed <180.>;
			wait-for-turn Torso around y-axis;
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
		if( heading >= 16380 AND heading < 32760 )
		{
			turn Torso to y-axis <270.> speed <180.>;
			wait-for-turn Torso around y-axis;
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
	}
	if( Static_Var_6 >= 49140 AND Static_Var_6 < 65520 )
	{
		if( heading >= 0 AND heading < 16380 )
		{
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
		if( heading >= 16380 AND heading < 32760 )
		{
			turn Torso to y-axis <0.> speed <180.>;
			wait-for-turn Torso around y-axis;
		}
	}
	Static_Var_7 = Static_Var_6;
	Static_Var_6 = heading;
	turn Torso to y-axis heading speed <180.>;
	turn LBarm to x-axis <0.> - pitch speed <90.>;
	turn RTarm to x-axis <0.> - pitch speed <90.>;
	wait-for-turn LBarm around x-axis;
	wait-for-turn Torso around y-axis;
	start-script RestoreAfterDelay();
	return (1);
}

Killed(severity, corpsetype)
{
	hide Flare;

	if( severity <= 25 )
	{
		corpsetype = 1;
		explode lfoot type NOHEATCLOUD;
		explode pelvis type NOHEATCLOUD;
		explode rfoot type NOHEATCLOUD;
		explode torso type NOHEATCLOUD;
		explode Head type NOHEATCLOUD;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode lfoot type NOHEATCLOUD | FALL;
		explode pelvis type NOHEATCLOUD | FALL;
		explode rfoot type NOHEATCLOUD | FALL;
		explode torso type NOHEATCLOUD | FALL;
		explode Head type NOHEATCLOUD | FALL;

		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode lfoot type NOHEATCLOUD | FALL | SMOKE | FIRE;
		explode pelvis type NOHEATCLOUD | FALL | SMOKE | FIRE;
		explode rfoot type NOHEATCLOUD | FALL | SMOKE | FIRE;
		explode torso type NOHEATCLOUD | FALL | SMOKE | FIRE |EXPLODE_ON_HIT;
		explode Head type NOHEATCLOUD | FALL | SMOKE | FIRE;
		
	
		return (corpsetype);
	}
	corpsetype = 3;
	explode lfoot type NOHEATCLOUD | FALL | SMOKE | FIRE;
	explode pelvis type NOHEATCLOUD | FALL | SMOKE | FIRE;
	explode rfoot type NOHEATCLOUD | FALL | SMOKE | FIRE;
	explode torso type NOHEATCLOUD | FALL | SMOKE | FIRE |EXPLODE_ON_HIT;
	explode Head type NOHEATCLOUD | FALL | SMOKE | FIRE;
	return (corpsetype);

}

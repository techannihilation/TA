MotionControl(moving, aiming, justmoved)
{
	justmoved = TRUE;
	while( TRUE )
	{
		moving = Static_Var_1;
		aiming = Static_Var_2;
		if( moving )
		{
			if( aiming )
			{
				Static_Var_3 = 1;
				call-script walklegs();
			}
			if( !aiming )
			{
				Static_Var_3 = 0;
				call-script walk();
			}
			justmoved = TRUE;
		}
		if( !moving )
		{
			Static_Var_3 = 1;
			if( justmoved )
			{
				turn Head to y-axis <0.> speed <300.>;
				turn RTleg to x-axis <0.> speed <300.>;
				turn RBleg to x-axis <0.> speed <300.>;
				turn Rfoot to x-axis <0.> speed <300.>;
				turn LTleg to x-axis <0.> speed <300.>;
				turn LBleg to x-axis <0.> speed <300.>;
				turn Lfoot to x-axis <0.> speed <300.>;
				turn trick to y-axis <0.> speed <300.>;
				justmoved = FALSE;
			}
			sleep 100;
		}
	}
}

Create()
{
	hide Flare;
	Static_Var_5 = 10000;
	hide Flare;
	dont-cache Flare;
	Static_Var_2 = 0;
	Static_Var_3 = 1;
	start-script MotionControl();
	Static_Var_6 = 0;
	Static_Var_1 = 0;
	Static_Var_8 = 0;
	turn Torso to y-axis <20.> now;
}

SetMaxReloadTime(Func_Var_1)
{
	Static_Var_5 = Func_Var_1 * 2;
}

SweetSpot(piecenum)
{
	piecenum = Torso;
}

RestoreAfterDelay()
{
	sleep Static_Var_5;
	if( Static_Var_7 > 32760 AND Static_Var_7 < 49322 )
	{
		turn Torso to y-axis <270.> speed <180.>;
		wait-for-turn Torso around y-axis;
		turn Torso to y-axis <0.> speed <180.>;
		wait-for-turn Torso around y-axis;
	}
	if( Static_Var_7 > 16198 AND Static_Var_7 <= 32760 )
	{
		turn Torso to y-axis <90.> speed <180.>;
		wait-for-turn Torso around y-axis;
		turn Torso to y-axis <0.> speed <180.>;
		wait-for-turn Torso around y-axis;
	}
	Static_Var_6 = 0;
	turn Torso to y-axis <20.> speed <180.>;
	turn LBarm to x-axis <0.> speed <150.>;
	turn LTarm to x-axis <0.> speed <150.>;
	turn RBarm to x-axis <0.> speed <150.>;
	turn RTarm to x-axis <0.> speed <150.>;
	turn Lrecoil to x-axis <0.> speed <150.>;
	turn Lrecoil to x-axis <0.> speed <150.>;
	Static_Var_2 = 0;
	Static_Var_8 = 0;
}


#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, turret1, stand, door1, door2, door3, door4, turret2,
       emit1, emit2, emit3, emit4;

static-var  Static_Var_1, gun_1;

// Signal definitions
#define SIG_AIM				2


FClose()
{
	signal 4;
	set-signal-mask 4;
	Static_Var_1 = 0;
	turn turret1 to y-axis <0.000000> speed <200.000000>;
	turn turret2 to x-axis <90.000000> speed <200.000000>;
	wait-for-turn turret2 around x-axis;
	wait-for-turn turret1 around y-axis;
	move stand to y-axis [-23.389990] speed [41.000000];
	sleep 400;
	turn door1 to z-axis <-3.000000> speed <309.000000>;
	turn door2 to z-axis <3.000000> speed <308.000000>;
	turn door3 to x-axis <-3.000000> speed <309.000000>;
	turn door4 to x-axis <3.000000> speed <309.000000>;
	sleep 400;
	set ARMORED to 1;
}

FCloseAfterDelay()
{
	set-signal-mask 4;
	sleep 4000;
	set-signal-mask 0;
	start-script FClose();
}

FOpen()
{
	signal 4;
	set-signal-mask 4;
	set ARMORED to 0;
	turn door1 to z-axis <-179.038462> speed <827.000000>;
	turn door2 to z-axis <178.038462> speed <826.000000>;
	turn door3 to x-axis <-179.038462> speed <827.000000>;
	turn door4 to x-axis <179.038462> speed <829.000000>;
	move stand to y-axis [0.000000] speed [76.000000];
	wait-for-turn door4 around x-axis;
	wait-for-move stand along y-axis;
	Static_Var_1 = 1;
	start-script FCloseAfterDelay();
}

SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 500;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 258;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 257;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	dont-shade door1;
	dont-shade door2;
	dont-shade door3;
	dont-shade door4;
	dont-shade stand;
	dont-shade turret1;
	dont-shade turret2;
	dont-cache door1;
	dont-cache door2;
	dont-cache door3;
	dont-cache door4;
	dont-cache stand;
	dont-cache turret1;
	dont-cache turret2;
	gun_1 = turret1;
	Static_Var_1 = 1;
	start-script FCloseAfterDelay();
	start-script SmokeUnit();
	move turret1 to y-axis [5.000000] now;
	turn door1 to z-axis <-179.038462> now;
	turn door2 to z-axis <178.038462> now;
	turn door3 to x-axis <-179.038462> now;
	turn door4 to x-axis <179.038462> now;
}

AimPrimary(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	start-script FOpen();
	while( !Static_Var_1 )
	{
		sleep 250;
	}
	turn turret1 to y-axis heading speed <200.000000>;
	turn turret2 to x-axis <0.000000> - pitch speed <200.000000>;
	wait-for-turn turret1 around y-axis;
	wait-for-turn turret2 around x-axis;
	return (1);
}

FirePrimary()
{
	if( gun_1 == 1 )
	{
		gun_1 = stand;
		return (0);
	}
	if( gun_1 == 2 )
	{
		gun_1 = door1;
		return (0);
	}
	if( gun_1 == 3 )
	{
		gun_1 = door2;
		return (0);
	}
	if( gun_1 == 4 )
	{
		gun_1 = turret1;
	}
}

AimFromPrimary(piecenum)
{
	piecenum = turret1;
}

QueryPrimary(piecenum)
{
	if( gun_1 == 1 )
	{
		piecenum = emit1;
	}
	if( gun_1 == 2 )
	{
		piecenum = emit2;
	}
	if( gun_1 == 3 )
	{
		piecenum = emit3;
	}
	if( gun_1 == 4 )
	{
		piecenum = emit4;
	}
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		if( Static_Var_1 )
		{
			corpsetype = 1;
		}
		if( !Static_Var_1 )
		{
			corpsetype = 2;
		}
		explode base type NOHEATCLOUD | BITMAP2;
		explode door1 type NOHEATCLOUD | BITMAP3;
		explode door2 type NOHEATCLOUD | BITMAP4;
		explode door3 type NOHEATCLOUD | BITMAP5;
		explode door4 type NOHEATCLOUD | BITMAP1;
		explode stand type NOHEATCLOUD | BITMAP3;
		explode turret1 type NOHEATCLOUD | BITMAP4;
		explode turret2 type NOHEATCLOUD | BITMAP5;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		if( Static_Var_1 )
		{
			corpsetype = 2;
		}
		if( !Static_Var_1 )
		{
			corpsetype = 3;
		}
		explode base type NOHEATCLOUD | BITMAP2;
		explode door1 type NOHEATCLOUD | FALL | BITMAP3;
		explode door2 type NOHEATCLOUD | FALL | BITMAP4;
		explode door3 type NOHEATCLOUD | FALL | BITMAP5;
		explode door4 type NOHEATCLOUD | FALL | BITMAP1;
		explode stand type NOHEATCLOUD | BITMAP3;
		explode turret1 type NOHEATCLOUD | BITMAP4;
		explode turret2 type NOHEATCLOUD | BITMAP5;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		if( Static_Var_1 )
		{
			corpsetype = 3;
		}
		if( !Static_Var_1 )
		{
			corpsetype = 4;
		}
		explode base type NOHEATCLOUD | BITMAP2;
		explode door1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
		explode door2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
		explode door3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5;
		explode door4 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		explode stand type NOHEATCLOUD | BITMAP1;
		explode turret1 type NOHEATCLOUD | BITMAP4;
		explode turret2 type NOHEATCLOUD | BITMAP5;
		return (corpsetype);
	}
	corpsetype = 4;
	explode base type NOHEATCLOUD | BITMAP2;
	explode door1 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP3;
	explode door2 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
	explode door3 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP5;
	explode door4 type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP1;
	explode stand type NOHEATCLOUD | BITMAP3;
	explode turret1 type NOHEATCLOUD | BITMAP4;
	explode turret2 type NOHEATCLOUD | BITMAP5;
	return (corpsetype);
}

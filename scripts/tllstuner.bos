#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, rotp, body, flare, turret, sleeve, barrel, dish1,
       dish2;

static-var  Static_Var_1, restore_delay, Static_Var_3, Static_Var_4, Static_Var_5;

// Signal definitions
#define SIG_AIM				2


HitByWeapon(anglex, anglez)
{
	var Func_Var_3;
	Func_Var_3 = get HEALTH;
	if( Func_Var_3 <= 60 )
	{
		if( Static_Var_4 == 0 )
		{
			Static_Var_4 = 1;
			hide dish1;
			explode dish1 type NOHEATCLOUD | FALL | SHATTER | SMOKE | BITMAP2;
		}
	}
	if( Func_Var_3 <= 50 )
	{
		if( Static_Var_5 == 0 )
		{
			Static_Var_5 = 1;
			hide dish2;
			explode dish2 type NOHEATCLOUD | FALL | SHATTER | SMOKE | BITMAP2;
		}
	}
}

SmokeUnit(healthpercent, sleeptime, smoketype)
{
	Static_Var_4 = 0;
	Static_Var_5 = 0;
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent >= 60 )
		{
			if( Static_Var_5 == 1 )
			{
				Static_Var_5 = 0;
				show dish2;
			}
		}
		if( healthpercent >= 75 )
		{
			if( Static_Var_4 == 1 )
			{
				Static_Var_4 = 0;
				show dish1;
			}
		}
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	dont-cache barrel;
	dont-cache sleeve;
	dont-cache turret;
	dont-cache flare;
	dont-cache rotp;
	dont-cache dish1;
	dont-cache dish2;
	restore_delay = 3000;
	hide flare;
	start-script SmokeUnit();
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 2;
}

RestoreAfterDelay()
{
	sleep restore_delay;
	stop-spin rotp around z-axis;
	turn dish1 to y-axis <0.000000> speed <100.000000>;
	turn dish2 to y-axis <0.000000> speed <100.000000>;
}

AimPrimary(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	spin rotp around z-axis speed <100.000000>;
	turn turret to y-axis heading speed <40.000000>;
	turn sleeve to x-axis <0.000000> - pitch speed <30.000000>;
	turn dish1 to y-axis <90.000000> speed <100.000000>;
	turn dish2 to y-axis <-90.000000> speed <100.000000>;
	wait-for-turn turret around y-axis;
	wait-for-turn sleeve around x-axis;
	start-script RestoreAfterDelay();
	return (1);
}

FirePrimary()
{
	spin rotp around z-axis speed <0.000000>;
}

AimFromPrimary(piecenum)
{
	piecenum = turret;
}

QueryPrimary(piecenum)
{
	piecenum = flare;
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	hide flare;
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode barrel type NOHEATCLOUD | BITMAP1;
		explode body type NOHEATCLOUD | BITMAP2;
		explode turret type NOHEATCLOUD | BITMAP2;
		explode sleeve type NOHEATCLOUD | BITMAP3;
	}
	if( severity <= 50 )
	{
		if( Static_Var_1 )
		{
			corpsetype = 2;
		}
		if( !Static_Var_1 )
		{
			corpsetype = 3;
		}
		explode body type NOHEATCLOUD | SHATTER | BITMAP1;
		explode turret type NOHEATCLOUD | BITMAP2;
		explode barrel type NOHEATCLOUD | FALL | BITMAP3;
		explode sleeve type NOHEATCLOUD | FALL | BITMAP1;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		if( Static_Var_1 )
		{
			corpsetype = 3;
		}
		if( !Static_Var_1 )
		{
			corpsetype = 4;
		}
		explode turret type NOHEATCLOUD | SHATTER | BITMAP1;
		explode body type NOHEATCLOUD | BITMAP2;
		explode sleeve type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP4;
		explode barrel type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
		explode turret type NOHEATCLOUD | BITMAP5;
		return (corpsetype);
	}
	corpsetype = 4;
	explode turret type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP1;
	explode body type NOHEATCLOUD | BITMAP2;
	explode sleeve type NOHEATCLOUD | FALL | SMOKE | FIRE | EXPLODE_ON_HIT | BITMAP2;
	explode barrel type NOHEATCLOUD | BITMAP5;
	return (corpsetype);
}

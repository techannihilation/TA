#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, pad, lights, arms, rnano, lnano, rspray,
       lspray;

static-var  Static_Var_1, spray, statechg_DesiredState, statechg_StateChanging;

// Signal definitions
#define SIG_ACTIVATE			2


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from pad;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

OpenYard()
{
	set YARD_OPEN to 1;
	while( !get YARD_OPEN )
	{
		set BUGGER_OFF to 1;
		sleep 1500;
		set YARD_OPEN to 1;
	}
	set BUGGER_OFF to 0;
}

CloseYard()
{
	set YARD_OPEN to 0;
	while( get YARD_OPEN )
	{
		set BUGGER_OFF to 1;
		sleep 1500;
		set YARD_OPEN to 0;
	}
	set BUGGER_OFF to 0;
}

activatescr()
{
	dont-cache arms;
	dont-cache rnano;
	dont-cache lnano;
	dont-cache lights;
	move arms to y-axis [5.000000] speed [10.000000];
	wait-for-move arms along y-axis;
	turn rnano to z-axis <75.000000> speed <120.000000>;
	turn lnano to z-axis <-75.000000> speed <120.000000>;
	wait-for-turn lnano around z-axis;
}

deactivatescr()
{
	turn rnano to z-axis <0.000000> speed <150.000000>;
	turn lnano to z-axis <0.000000> speed <150.000000>;
	wait-for-turn lnano around z-axis;
	move arms to y-axis [0.000000] speed [15.000000];
	cache arms;
	cache rnano;
	cache lnano;
	cache lights;
}

Go()
{
	call-script activatescr();
	call-script OpenYard();
	set INBUILDSTANCE to 1;
}

Stop()
{
	set INBUILDSTANCE to 0;
	call-script CloseYard();
	call-script deactivatescr();
}

InitState()
{
	statechg_DesiredState = TRUE;
	statechg_StateChanging = FALSE;
}

RequestState(requestedstate, currentstate)
{
	if( statechg_StateChanging )
	{
		statechg_DesiredState = requestedstate;
		return (0);
	}
	statechg_StateChanging = TRUE;
	currentstate = statechg_DesiredState;
	statechg_DesiredState = requestedstate;
	while( statechg_DesiredState != currentstate )
	{
		if( statechg_DesiredState == 0 )
		{
			call-script Go();
			currentstate = 0;
		}
		if( statechg_DesiredState == 1 )
		{
			call-script Stop();
			currentstate = 1;
		}
	}
	statechg_StateChanging = FALSE;
}

Create()
{
	dont-shade pad;
	dont-shade lights;
	dont-shade rnano;
	dont-shade lnano;
	dont-shade arms;
	spray = base;
	call-script InitState();
	start-script SmokeUnit();
}

QueryNanoPiece(piecenum)
{
	piecenum = lspray;
	if( spray == 0 )
	{
		piecenum = rspray;
	}
	spray = !spray;
}

Activate()
{
	signal SIG_ACTIVATE;
	start-script RequestState(0);
}

Deactivate()
{
	signal SIG_ACTIVATE;
	set-signal-mask SIG_ACTIVATE;
	sleep 5000;
	set-signal-mask 0;
	start-script RequestState(1);
}

StartBuilding()
{
	dont-cache pad;
}

StopBuilding()
{
	cache pad;
}

QueryBuildInfo(piecenum)
{
	piecenum = pad;
}

SweetSpot(piecenum)
{
	piecenum = body;
}

Killed(severity, corpsetype)
{
	explode arms type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	explode body type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	explode pad type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	explode rnano type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP3;
	explode lnano type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP3;
	if( severity <= 25 )
	{
		corpsetype = 1;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode arms type NOHEATCLOUD | FALL | BITMAP2;
		explode lnano type NOHEATCLOUD | FALL | BITMAP3;
		explode rnano type NOHEATCLOUD | FALL | BITMAP4;
		explode lights type NOHEATCLOUD | FALL | BITMAP5;
		return (corpsetype);
	}
	corpsetype = 3;
	explode lnano type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP2;
	explode rnano type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP3;
	explode pad type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP4;
	explode lights type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP3;
	explode body type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP3;
	explode arms type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP3;
	return (corpsetype);
}

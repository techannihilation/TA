#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, turret, guns, gun1, gun2, gun3, gun4;

static-var  gun_1;

// Signal definitions
#define SIG_AIM				2


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	dont-cache guns;
	dont-cache turret;
	dont-shade guns;
	dont-shade turret;
	gun_1 = base;
	start-script SmokeUnit();
}

AimPrimary(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	turn guns to y-axis heading speed <200.000000>;
	turn guns to x-axis <0.000000> - pitch speed <200.000000>;
	wait-for-turn guns around y-axis;
	wait-for-turn guns around x-axis;
	return (1);
}

FirePrimary()
{
	if( gun_1 == 0 )
	{
		gun_1 = turret;
		return (0);
	}
	if( gun_1 == 1 )
	{
		gun_1 = guns;
		return (0);
	}
	if( gun_1 == 2 )
	{
		gun_1 = gun1;
		return (0);
	}
	if( gun_1 == 3 )
	{
		gun_1 = base;
		return (0);
	}
}

QueryPrimary(piecenum)
{
	if( gun_1 == 0 )
	{
		piecenum = gun1;
	}
	if( gun_1 == 1 )
	{
		piecenum = gun2;
	}
	if( gun_1 == 2 )
	{
		piecenum = gun3;
	}
	if( gun_1 == 3 )
	{
		piecenum = gun4;
	}
}

AimFromPrimary(piecenum)
{
	piecenum = guns;
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type NOHEATCLOUD | BITMAPONLY | BITMAP1;
		explode guns type NOHEATCLOUD | BITMAPONLY | BITMAP4;
		explode turret type NOHEATCLOUD | BITMAPONLY | BITMAP5;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type NOHEATCLOUD | BITMAPONLY | BITMAP1;
		explode guns type NOHEATCLOUD | BITMAPONLY | BITMAP4;
		explode turret type NOHEATCLOUD | SHATTER | BITMAP5;
		return (corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode base type NOHEATCLOUD | BITMAPONLY | BITMAP1;
		explode guns type NOHEATCLOUD | BITMAPONLY | BITMAP4;
		explode turret type NOHEATCLOUD | SHATTER | BITMAP5;
		return (corpsetype);
	}
	corpsetype = 3;
	explode base type NOHEATCLOUD | BITMAPONLY | BITMAP1;
	explode guns type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	explode turret type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP5;
	return (corpsetype);
}

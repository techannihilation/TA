	dont-cache headglow;
	dont-shade base;
	dont-shade NE_block;
	dont-shade glow1;
	dont-shade SE_block;
	dont-shade glow2;
	dont-shade SW_block;
	dont-shade glow3;
	dont-shade NW_block;
	dont-shade glow4;
	dont-shade column_z_displacer;
	dont-shade column;
	dont-shade head;
	dont-shade nc1;
	dont-shade nc2;
	dont-shade nc3;
	dont-shade nc4;
	dont-shade nc5;
	dont-shade headglow;
	dont-shade hc1;
	dont-shade hc2;
	dont-shade hc3;
	dont-shade hc4;
	dont-shade hc5;
	Static_Var_2 = 0;

Create()
{
	set ARMORED to TRUE;
	
	firedelay = 650;
	firing = 0;
//	moving = 0;
	antiair=0;
	gun_1 = 0;
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 1000;
	}
	start-script SmokeUnit();
}

Activate()
{
	signal SIG_ACTIVATE;
	set-signal-mask SIG_ACTIVATE;
//	jamming = 1;
	spin fork around y-axis speed <100.021978>;
}

Deactivate()
{
	signal SIG_ACTIVATE;
	set-signal-mask SIG_ACTIVATE;
	turn fork to y-axis <0.000000> speed <100.000000>;
	wait-for-turn fork around y-axis;
//	jamming = 0;
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 5;
}

RestoreAfterDelay()
{
//	sleep restore_delay;
	sleep 5000;
	antiair = 0;
	set-signal-mask 0;
	turn turret to y-axis <0.000000> speed <180.000000>;
	turn sleeve to x-axis <0.000000> speed <180.000000>;
//	move sleeve to y-axis [2.4300000] now;
	move sleeve to y-axis [0.000000] speed [20.000000];
	sleep 325;
}

AimPrimary(heading, pitch)
{
	signal SIG_AIM_3;
	set-signal-mask SIG_AIM_3;
	
	while (antiair OR firing)
	{
		sleep 200;
	}
	
	move sleeve to y-axis [2.430000] speed [20.000000];

	sleep 325;
	
	turn turret to y-axis heading speed <360.000000>;
	turn sleeve to x-axis <0.000000> - pitch speed <360.000000>;
	
	wait-for-turn turret around y-axis;
	wait-for-turn sleeve around x-axis;
	
	start-script RestoreAfterDelay();
	return (1);
}

FirePrimary()
{
	if( gun_1 == 0 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}			
	if( gun_1 == 1 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}
	if( gun_1 == 2 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}			
	if( gun_1 == 3 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}
	if( gun_1 == 4 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}			
	if( gun_1 == 5 )
	{
		firing = 1;	
		sleep 150;
		sleep firedelay;
		firing = 0;
	}
	++gun_1;
	if( gun_1 == 6 )
	{
		gun_1 = 0;
	}
}


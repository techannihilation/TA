#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, arm, elights, mlights, steam1, steam2, flames;

static-var  Static_Var_1, Static_Var_2;


Steam()
{
	while( TRUE )
	{
		if( Static_Var_1 == 0 )
		{
			emit-sfx 257 from steam2;
			sleep 200;
		}
		sleep 1;
	}
}

Flamepipe()
{
	while( TRUE )
	{
		if( Static_Var_1 == 1 )
		{
			emit-sfx 1024 + 0 from flames;
		}
		sleep 55;
	}
}

Standby()
{
	while( TRUE )
	{
		if( Static_Var_2 == 0 )
		{
			turn arm to y-axis <0.000000> speed <30.000000>;
			wait-for-turn arm around y-axis;
			Static_Var_1 = 1;
			sleep 2670;
			turn arm to y-axis <28.000000> speed <30.000000>;
			wait-for-turn arm around y-axis;
			Static_Var_1 = 0;
			sleep 3670;
		}
		sleep 1;
	}
}

SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	start-script Steam();
	start-script Flamepipe();
	start-script Standby();
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 258;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 257;
			}
			emit-sfx smoketype from body;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	dont-cache arm;
	dont-shade mlights;
	dont-shade elights;
	dont-shade arm;
	Static_Var_2 = 0;
	Static_Var_1 = 0;
	start-script SmokeUnit();
}

Activate()
{
	cache elights;
	Static_Var_2 = 0;
	turn arm to y-axis <28.000000> speed <30.000000>;
	wait-for-turn arm around y-axis;
	dont-cache mlights;
}

Deactivate()
{
	Static_Var_2 = 1;
	wait-for-turn arm around y-axis;
	cache mlights;
	turn arm to y-axis <0.000000> speed <30.000000>;
	wait-for-turn arm around y-axis;
	dont-cache elights;
}

SweetSpot(piecenum)
{
	piecenum = body;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode body type NOHEATCLOUD | BITMAP2;
		explode arm type NOHEATCLOUD | BITMAP3;
		explode elights type NOHEATCLOUD | BITMAP4;
		return (corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode arm type NOHEATCLOUD | FALL | BITMAP2;
		explode elights type NOHEATCLOUD | FALL | BITMAP3;
		explode body type NOHEATCLOUD | BITMAP4;
		return (corpsetype);
	}
	corpsetype = 3;
	explode body type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP1;
	explode arm type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP4;
	explode mlights type NOHEATCLOUD | FALL | SMOKE | EXPLODE_ON_HIT | BITMAP1;
	return (corpsetype);
}

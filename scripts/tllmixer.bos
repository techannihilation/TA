#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, jammer, wake1, wake2, wake3, arm;

// Signal definitions
#define SIG_MOVE			2


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from jammer;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	start-script SmokeUnit();
}

StartMoving()
{
	signal SIG_MOVE;
	set-signal-mask SIG_MOVE;
	while( TRUE )
	{
		emit-sfx 2 from wake1;
		emit-sfx 2 from wake2;
		emit-sfx 2 from wake3;
		sleep 200;
	}
}

StopMoving()
{
	signal SIG_MOVE;
}

Activate()
{
	turn arm to x-axis <90.000000> speed <60.000000>;
	sleep 250;
	spin jammer around z-axis speed <100.000000> accelerate <3.000000>;
}

Deactivate()
{
	stop-spin jammer around z-axis decelerate <3.000000>;
	sleep 350;
	turn jammer to z-axis <0.000000> speed <100.000000>;
	turn arm to x-axis <0.000000> speed <60.000000>;
	sleep 250;
}

SweetSpot(piecenum)
{
	piecenum = jammer;
}

Killed(severity, corpsetype)
{
	explode base type NOHEATCLOUD | BITMAPONLY | BITMAP3;
	explode body type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	if( severity < 25 )
	{
		corpsetype = 1;
		return (corpsetype);
	}
	explode wake2 type NOHEATCLOUD | BITMAPONLY | BITMAP4;
	explode jammer type NOHEATCLOUD | FALL | EXPLODE_ON_HIT | BITMAP1;
	explode jammer type NOHEATCLOUD | SHATTER | BITMAP1;
	if( severity < 50 )
	{
		corpsetype = 2;
		return (corpsetype);
	}
	explode body type NOHEATCLOUD | SHATTER | EXPLODE_ON_HIT | BITMAP2;
	corpsetype = 3;
	return (corpsetype);
}
